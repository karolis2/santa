@model Darbuotojai.Application.ViewModels.DarbuotojaiViewModel

<div class="row">
    <div class="col-6 col-sm-3">
        <label class="radio-inline"><input type="radio" name="optradio" checked> Visi Darbuotojai</label>
    </div>
      <div class="w-100"></div>

    <div class="col-6 col-sm-3">
        <label class="radio-inline"><input type="radio" name="optradio"> Aktyvūs</label>

    </div>

  <div class="w-100"></div>

  <div class="col-6 col-sm-3"><label class="radio-inline"><input type="radio" name="optradio"> Neaktyvūs</label>
</div>

</div>

<table id="book" class="table table-bordered table-hover">
    <thead>
    <tr class="">
        <th>Vardas</th>
        <th>Pavardė</th>
        <th>Asmens Kodas</th>
        <th>Gimimo Data</th>
        <th>Adresas</th>
        <th>Aktyvumas</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var darbuotojas in Model.Darbuotojai)
    {
        <tr style="height: 60px;">
            <td>@darbuotojas.Vardas</td>
            <td>@darbuotojas.Pavardė</td>
            <td>@darbuotojas.AsmensKodas</td>
            <td>@darbuotojas.GimimoData.Date</td>
            <td>@darbuotojas.NamoNumeris, @darbuotojas.Gatve, @darbuotojas.Miestas, @darbuotojas.PastoKodas </td>
            
            @if (@darbuotojas.Aktyvus)
            {
                <td>Aktyvus</td>
            }
            
            <td>Neaktyvus</td>
        </tr>
    }

